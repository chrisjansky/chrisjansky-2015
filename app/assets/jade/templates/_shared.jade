block template-variables
  - var page = {title: "CH J", description: "Project description."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= page.title
      meta(name="description", content=page.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

      link(rel="shortcut icon", href="favicon.ico")

  body(class=currentProject ? "color--" + currentProject.slug : null)
    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:remove -->
      script window.jQuery || document.write("<script src='../bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->
